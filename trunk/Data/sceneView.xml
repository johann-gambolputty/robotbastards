<?xml version="1.0" encoding="utf-8" ?>
<rb>
	<modelSet name="ViewTechniques">

		<object type="RbEngine.Rendering.SelectedTechnique" name="ShadowScene">

			<!-- Set the ShadowScene Technique property to a ShadowBufferRenderTechnique -->
			<!-- ShadowBufferRenderTechnique needs two inputs - the scene renderer, and the view renderer (within which the scene renderer is nested) -->
			<object type="RbEngine.Rendering.ShadowBufferRenderTechnique" property="Technique"/>

			<!-- Set the ShadowScene RenderObject property to a new SelectedTechnique -->
			<object type="RbEngine.Rendering.SelectedTechnique" property="RenderObject">

				<!-- Set up a technique to clear the depth and colour buffers, apply the view camera, and render the scene -->
				<object type="RbEngine.Rendering.RenderTechnique" property="Technique">

					<object type="RbEngine.Rendering.ClearTargetDepth"/>

					<object type="RbEngine.Rendering.ClearTargetColour">
						<colour value="LightSlateGray" property="Colour"/>
					</object>

					<!-- because this is inside a template (model definition), this object must be somehow symbolic, to be interpreted at run-time -->
					<object type="CurrentViewCamera, or something"></object>

				</object>

			</object>

		</object>

	</modelSet>

	<reference modelPath="ViewTechniques.ShadowScene" property="ViewTechnique"/>

</rb>
