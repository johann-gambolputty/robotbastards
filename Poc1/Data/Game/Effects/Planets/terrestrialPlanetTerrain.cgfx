
sampler2D TerrainPackTexture = sampler_state
{
	WrapS = Repeat;
	WrapT = Repeat;
	MinFilter = Linear;
	MagFilter = Linear;
};

sampler2D TerrainTypeTexture = sampler_state
{
	WrapS = ClampToEdge;
	WrapT = ClampToEdge;
	MinFilter = Nearest;
	MagFilter = Nearest;
};

sampler2D NoiseTexture = sampler_state
{
	WrapS = Repeat;
	WrapT = Repeat;
	MinFilter = Nearest;
	MagFilter = Nearest;
};
